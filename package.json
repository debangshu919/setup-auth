{
	"name": "authzey",
	"version": "1.0.0",
	"description": "CLI tool to setup authentication in Next.js using pluggable auth providers.",
	"keywords": [
		"authentication",
		"nextjs",
		"bootstrapper"
	],
	"homepage": "https://github.com/debangshu919/authzey#readme",
	"bugs": {
		"url": "https://github.com/debangshu919/authzey/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/debangshu919/authzey.git"
	},
	"license": "MIT",
	"author": "Debangshu",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"authzey": "./dist/index.js"
	},
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"dev": "tsx src/index.ts",
		"build": "tsup src/index.ts --format esm --dts --clean",
		"lint": "biome lint .",
		"format": "biome check . --write --unsafe",
		"prepare": "husky",
		"type-check": "tsc --noEmit",
		"test": "jest --config jest.config.cjs",
		"test:ci": "jest --config jest.config.cjs --passWithNoTests",
		"commit": "cz"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@types/jest": "^30.0.0",
		"@types/pg": "^8.16.0",
		"@types/prompts": "^2.4.9",
		"better-auth": "^1.4.9",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"drizzle-kit": "^0.31.8",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"lint-staged": "^16.2.7",
		"ts-jest": "^29.4.6",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json}": [
			"npm run format",
			"npm run lint"
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"dependencies": {
		"cac": "^6.7.14",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1",
		"execa": "^9.6.1",
		"kleur": "^4.1.5",
		"ora": "^9.0.0",
		"pg": "^8.16.3",
		"prompts": "^2.4.2"
	}
}
